<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="#DFD5D5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DevelopmentActivity">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/AndroidDevBtn"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/green"
            android:layout_width="178dp"
            android:layout_height="150dp" >
            <TextView
                android:gravity="center"
                android:textSize="25dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android\nApp\nDevelopment"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="10dp"
            android:id="@+id/WebDevBtn"
            android:backgroundTint="@color/gray"
            android:layout_width="178dp"
            android:layout_height="150dp">
            <TextView
                android:gravity="center"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web\nDevelopment"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/IOSDevBtn"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/orange"
            android:layout_width="178dp"
            android:layout_height="150dp" >
            <TextView
                android:gravity="center"
                android:textSize="25dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IOS\nApp\nDevelopment"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="10dp"
            android:id="@+id/MLBtn"
            android:backgroundTint="@color/teal"
            android:layout_width="178dp"
            android:layout_height="150dp">
            <TextView
                android:gravity="center"
                android:textSize="25dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine \n learning"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/contactUsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact-us"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:textColor="@color/blue"
        />

</LinearLayout>